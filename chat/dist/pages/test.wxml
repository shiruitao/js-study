
  <view>
    <view class="view">
      <text style="font-size: 20px">简单2步,选中心动好礼</text>
      <view class="column">
        <view class="row">
          <view class="column">
            <image class="photo" src="{{gift}}"/>
            <text class="textorder">送给TA</text>
          </view>
          <text class="line"/>
          <view class="column">
            <image class="photo" src="{{like}}"/>
            <text class="textorder">TA喜欢的</text>
          </view>
          <text class="line"/>
          <view class="column">
            <image class="photo" src="{{finish}}"/>
            <text class="textorder">　完成　</text>
          </view>
        </view>
      </view>
      <view class="rows">
        <text class="textoption" bindtap="she" style="color: {{colorshe}}; border-bottom: 3px solid {{solidshe}}">送她 </text>
        <text class="textoption" bindtap="he" style="color: {{color}}; border-bottom: 3px solid {{solidhe}}" solid-bottom="solidhe">送他</text>
      </view>
      <view class="row">
        <view class="button">
          <image class="buttonpho" src="{{self}}"/>
          <text class="bstyle">自己</text>
        </view>
        <view class="button">
          <image class="buttonpho" src="{{girl}}"/>
          <text class="bstyle">老婆/女票</text>
        </view>
        <view class="button">
          <image class="buttonpho" src="{{sister}}"/>
          <text class="bstyle">{{sist}}</text>
        </view>
      </view>
      <view class="row">
        <view class="button">
          <image class="buttonpho" src="{{mom}}"/>
          <text class="bstyle">{{parent}}</text>
        </view>
        <view class="button">
          <image class="buttonpho" src="{{elder}}"/>
          <text class="bstyle">长辈</text>
        </view>
        <view class="button">
          <image class="buttonpho" src="{{colleague}}"/>
          <text class="bstyle">同事</text>
        </view>
      </view>
      <view class="end">
        <text class="texttitle">先跳过,随便逛逛 ▶</text>
      </view>
    </view>
  </view>